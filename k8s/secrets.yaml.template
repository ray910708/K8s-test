# Secrets template
# Copy this file to secrets.yaml and replace the values with base64 encoded secrets
# Example: echo -n 'your-password' | base64

apiVersion: v1
kind: Secret
metadata:
  name: app-secrets
  namespace: microservices-demo
type: Opaque
data:
  # Base64 encoded Redis password
  # For development/testing, you can use empty password
  # echo -n '' | base64
  REDIS_PASSWORD: ""

  # Base64 encoded API key (if needed)
  # echo -n 'your-api-key' | base64
  API_KEY: ""
