[flake8]
# Flake8 configuration for the project

# Maximum line length
max-line-length = 127

# Maximum cyclomatic complexity
max-complexity = 10

# Files and directories to exclude
exclude =
    .git,
    __pycache__,
    venv,
    env,
    .venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .coverage,
    htmlcov,
    .tox

# Error codes to ignore
ignore =
    # E203: whitespace before ':'
    E203,
    # W503: line break before binary operator
    W503,
    # E501: line too long (handled by max-line-length)
    E501

# Select specific error codes
select =
    E,F,W,C90

# Show source code for each error
show-source = True

# Show statistics
statistics = True

# Count errors
count = True

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811
